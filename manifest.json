{
    "manifest_version" : 2,
    "name" : "KhumKhomTH",
    "version" : "1.0",
    "browser_action" :{
        "default_popup" : "popup.html",
        "default_title" : "InPageKhumKhom"
    },
    "background": {
        "scripts":["eventPage.js"],
        "persistent": false
    },

    "content_scripts":[
        {
            "matches": [ "http://*/*", "https://*/*", "file://*/*" ],
            "js": ["content.js","jquery-3.5.1.min.js"],
            "css" :["content.css"]
        }
    ],

    "permissions": [
        "activeTab", "tabs", "http://*/*", "https://*/*" 
    ]

    
}