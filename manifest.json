{
    "manifest_version" : 2,
    "name" : "Khakai Life Coach",
    "version" : "1.1",
    "description":"คำพูดสอนใจจากประสบการณ์ของนาย ฌ้อน",
    "icons": {
        "128": "icons/icon128.png",
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
     },
    "browser_action" :{
        "default_icon": "icons/icon16.png",
        "default_popup" : "popup.html",
        "default_title" : "Khakai Life Coach"
    },

    "content_scripts":[
        {
            "matches": [ "http://*/*", "https://*/*", "file://*/*" ],
            "js": ["content.js","jquery-3.5.1.min.js"],
            "css" :["content.css"]
        }
    ],

    "permissions": [
        "activeTab", "tabs", "http://*/*", "https://*/*" 
    ]

    
}